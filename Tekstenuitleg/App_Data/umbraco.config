        <Article id="1394" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="24" createDate="2011-10-03T00:12:53" updateDate="2011-11-22T05:00:31" nodeName="Bescherm je privacy op Facebook met lists" urlName="bescherm-je-privacy-op-facebook-met-lists" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1394" isDoc="">
