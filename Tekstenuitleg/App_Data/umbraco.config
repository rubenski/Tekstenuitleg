        <Article id="1856" parentID="1281" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="11" createDate="2012-03-07T22:22:29" updateDate="2012-03-08T00:37:15" nodeName="Access required and allow zero length" urlName="access-required-and-allow-zero-length" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1281,1856" isDoc="">
