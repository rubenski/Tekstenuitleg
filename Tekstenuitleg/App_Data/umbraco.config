        <Article id="1405" parentID="1263" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="4" createDate="2006-10-01T00:00:00" updateDate="2011-11-22T05:06:02" nodeName="Cursus database ontwerpen" urlName="cursus-database-ontwerpen" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1263,1405" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
