        <Article id="1841" parentID="1281" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="10" createDate="2012-02-25T14:50:07" updateDate="2012-02-26T20:07:56" nodeName="Access validation rule tutorial" urlName="access-validation-rule-tutorial" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1281,1841" isDoc="">
