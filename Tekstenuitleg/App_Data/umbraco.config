        <Article id="1811" parentID="1281" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="8" createDate="2012-02-12T19:20:08" updateDate="2012-02-13T01:50:32" nodeName="Create a many-to-many relationship in Access" urlName="create-a-many-to-many-relationship-in-access" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1281,1811" isDoc="">
