        <Article id="1358" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="7" createDate="2005-05-11T00:00:00" updateDate="2011-11-22T04:54:24" nodeName="ADSL2 en ADSL2+. Wat moet je ermee?" urlName="adsl2-en-adsl2plus.-wat-moet-je-ermee" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1358" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
