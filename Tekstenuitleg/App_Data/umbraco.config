        <Article id="1393" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="23" createDate="2011-09-22T23:56:36" updateDate="2011-11-22T05:00:22" nodeName="Wat is een botnet?" urlName="wat-is-een-botnet" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1393" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
