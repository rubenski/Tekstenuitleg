        <Article id="1468" parentID="1281" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="1" createDate="2007-01-02T00:00:00" updateDate="2011-11-24T18:44:55" nodeName="A basic Excel 2003 tutorial" urlName="a-basic-excel-2003-tutorial" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1281,1468" isDoc="">
