        <Article id="1396" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="26" createDate="2011-10-15T02:12:02" updateDate="2012-03-08T20:07:01" nodeName="Glasvezel internet - over de snelheid, techniek en beschikbaarheid" urlName="glasvezel-internet-over-de-snelheid-techniek-en-beschikbaarheid" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1396" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
