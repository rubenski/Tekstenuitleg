          <ArticleSubPage id="1851" parentID="1841" level="5" writerID="5" creatorID="5" nodeType="1181" template="1113" sortOrder="3" createDate="2012-03-01T22:15:35" updateDate="2012-03-03T02:16:35" nodeName="Date validation rule examples" urlName="date-validation-rule-examples" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1281,1841,1851" isDoc="">
