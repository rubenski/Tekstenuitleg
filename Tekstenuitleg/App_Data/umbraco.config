        <Article id="1338" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="3" createDate="2005-05-01T00:00:00" updateDate="2011-11-22T04:53:35" nodeName="ADSL provider kiezen" urlName="adsl-provider-kiezen" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1338" isDoc="">
