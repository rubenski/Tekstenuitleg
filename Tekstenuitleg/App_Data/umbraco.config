        <Article id="1444" parentID="1262" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="10" createDate="2005-10-11T00:00:00" updateDate="2011-11-22T05:04:48" nodeName="De videokaart" urlName="de-videokaart" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1262,1444" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
