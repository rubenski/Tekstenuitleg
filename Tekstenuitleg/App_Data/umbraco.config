        <Article id="1284" parentID="1261" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="3" createDate="2003-08-08T00:00:00" updateDate="2011-11-22T05:01:19" nodeName="Internet delen met Windows XP" urlName="internet-delen-met-windows-xp" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1261,1284" isDoc="">
          <articleStartHeader><![CDATA[]]></articleStartHeader>
