          <ArticleSubPage id="1339" parentID="1338" level="5" writerID="5" creatorID="5" nodeType="1181" template="1113" sortOrder="1" createDate="2005-05-01T00:00:00" updateDate="2011-11-21T23:16:38" nodeName="Hoe snel is ADSL?" urlName="hoe-snel-is-adsl" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1338,1339" isDoc="">
