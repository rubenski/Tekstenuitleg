        <Article id="1489" parentID="1279" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="1" createDate="2007-02-05T00:00:00" updateDate="2011-11-30T17:40:37" nodeName="Optical and wireless mice" urlName="optical-and-wireless-mice" writerName="rubenski" creatorName="rubenski" path="-1,1277,1278,1279,1489" isDoc="">
