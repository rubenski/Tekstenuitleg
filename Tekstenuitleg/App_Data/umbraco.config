        <Article id="1392" parentID="1256" level="4" writerID="5" creatorID="5" nodeType="1180" template="1113" sortOrder="22" createDate="2011-09-21T22:45:54" updateDate="2011-11-22T05:00:15" nodeName="Tips voor veilig internetten" urlName="tips-voor-veilig-internetten" writerName="rubenski" creatorName="rubenski" path="-1,1185,1245,1256,1392" isDoc="">
